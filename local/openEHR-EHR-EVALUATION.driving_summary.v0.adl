definition
	EVALUATION[at0000] matches {    -- Driving Summary
		data matches {
			ITEM_TREE[at0003] matches {    -- ItemTree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Overall status
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- Current driver
									at0006,    -- Former driver
									at0007]    -- Never driven
								}
							}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {    -- Vehicle category
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0009,    -- Car
									at0010,    -- Motorbike
									at0011,    -- Moped
									at0012,    -- Medium-sized vehicles
									at0013,    -- Large vehicles and lorries
									at0014,    -- Minibus
									at0015,    -- Bus
									at0016,    -- Agricultural tractor
									at0017,    -- Other specialist vehicles
									at0018,    -- Quad bikes
									at0019]    -- Motor tricycle
								}
							}
						}
					}
					ELEMENT[at0020] occurrences matches {0..1} matches {    -- Date license valid from
						value matches {
							DV_DATE matches {*}
						}
					}
					ELEMENT[at0021] occurrences matches {0..1} matches {    -- Date license relinquished
						value matches {
							DV_DATE matches {*}
						}
					}
					ELEMENT[at0022] occurrences matches {0..1} matches {    -- Licence surrender reason
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0023] occurrences matches {0..1} matches {    -- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- ItemTree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

